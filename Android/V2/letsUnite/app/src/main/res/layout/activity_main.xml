<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.abdulrahmanalshaghdali.letsunite.MainActivity">




    <Button
        android:text=" -- Bored -- "
        android:textSize="40sp"
        android:layout_width="500dp"
        android:layout_height="140dp"
        android:id="@+id/boredBTN"
        android:background="@drawable/cast_album_art_placeholder"
        android:textColor="@color/cast_libraries_material_featurehighlight_text_header_color"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <Button
        android:text=" -- Events -- "
        android:textSize="40sp"
        android:layout_width="500dp"
        android:layout_height="140dp"
        android:id="@+id/eventsBTN"
        android:background="@drawable/cast_album_art_placeholder"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:layout_below="@+id/boredBTN"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp" />

    <Button
        android:text=" -- News -- "
        android:textSize="40sp"
        android:layout_width="500dp"
        android:layout_height="140dp"
        android:id="@+id/newsBT"
        android:background="@drawable/cast_album_art_placeholder"
        android:textColor="@color/cast_expanded_controller_progress_text_color"
        android:layout_below="@+id/eventsBTN"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp" />

    <Switch
        android:text="Allow location to find events"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/switchBT"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#808080"
        android:textStyle="bold"

        />

</RelativeLayout>
